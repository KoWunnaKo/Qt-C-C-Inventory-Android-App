QLabel#title{
   
   font: bold italic 50px;
   color: rgba(0, 0, 0, 0.6);
    
}

QPushButton#loginBtn{
   
    color : #21be2b;
    background-color: rgba(255, 255, 255, 0.8);
    border-style: outset;
    border-width: 2px;
    border-radius: 40px;
    border-color: beige;
    font: bold 50px;
    padding: 6px;
   
}
QPushButton#loginBtn:pressed {
    color : #17a81a;
    border-style: inset;
}
QLabel#taskLabel{
   
