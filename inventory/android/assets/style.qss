}

QComboBox::down-arrow {
    image: url(assets:/drop-arrow.png);
    width: 30px;
    height: 30px;
}
QComboBox::drop-down {
  subcontrol-origin: padding;
  subcontrol-position: top right;
  width: 60px;
  border-top-right-radius: 30px;
  border-bottom-right-radius: 30px;
  background:transparent;

}

QComboBox#taskCtrl {
 
    background-color: rgba(255, 255, 255, 0.8);
    border-style: outset;  
    border-radius: 40px;
    border-color: beige;
    padding-left: 30px;
    color: "#21be2b";
    font: bold 50px; 
    
} 
QComboBox#taskCtrl:disabled{
  background-color: rgba(255, 255, 255, 0.3);
}
QComboBox#taskCtrl QAbstractItemView {
     
  padding-left: 30px;
  font: bold 50px;
  background:transparent;
  height: 100px;

}
QComboBox#taskCtrl:on {
  
  color: "#21be2b";
  selection-background-color:  rgba(0, 179, 210,0.5);
  border-radius: 20px;
}
